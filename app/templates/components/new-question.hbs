
{{#if addNewQuestion}}
<h1>New Question</h1>
 <div class="newQuestionForm">
   <form>
     <div class="form-group">
       <label for="content">Content</label>
       {{input value=content id="content"}}
     </div>

     <div class="form-group">
       <label for="type">Author</label>
       {{input value=author id="author"}}
     </div>

     <div class="form-group">
       <label for="city">Notes</label>
       {{input value=notes id="notes"}}
     </div>

     <button {{action 'save1'}}>Save</button>
   </form>
 </div>
 {{else}}
 <button class="askNew" {{action 'questionFormShow'}}>Ask a new Question</button>
 {{/if}}
